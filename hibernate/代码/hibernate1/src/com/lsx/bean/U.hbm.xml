<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- 
    Mapping file autogenerated by MyEclipse Persistence Tools
-->
<hibernate-mapping>

	<!-- 
		name:实体类的包名类名
		table:对应的数据库表名
		schema： Oracle数据库中的模式
		<id>标签对应实体类中是主键的那个属性。  name：实体属性名 ，  type：hibernate类型(数据库表中是number，反向生成的时候要将Hibernate type改为integer)
			<column>标签表示对应在数据库表中的哪一列。 name：列名  precision：类型精度
			<generator>主键的生成方式
		<property>标签对应实体类中非主键的那些属性。type：类型	
			有包名类型的类型，采用的都是Java类型，否则是Hibernate类型 ，理解成Java类型的别名
	 -->
    <class name="com.lsx.bean.U" table="U" schema="SYSTEM">
        <id name="id" type="integer">
            <column name="ID" precision="22" scale="0" />
            
            <!-- <generator class="sequence" />  没改的时候-->
            <!-- 修改后，加入序列的名字，数据库中自己起的序列名 -->
            <generator class="sequence">
            	<param name="sequence">usid</param>
            </generator>
        </id>
        
        <property name="name" type="java.lang.String">
            <column name="NAME" length="200" />
        </property>
        
        <property name="age" type="integer">
            <column name="AGE" precision="22" scale="0" />
        </property>
    </class>
</hibernate-mapping>
